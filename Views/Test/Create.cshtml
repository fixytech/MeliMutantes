
@{
    ViewData["Title"] = "Test";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="text-center">
    <h1 class="display-4">Test</h1>
    <p>Detector de ADN Mutante.</p>
</div>

<div class="row">
    <div class="col col-md-8 offset-md-2" style="@(ViewBag.Tipo == "info" ? "  " : "display:none;" ) ">
        <img src="~/img/success.png" class="img-fluid rounded mx-auto d-block" alt="..." style="width:50%; ">
    </div>

</div>
<div class="row">
    <div class="col col-md-8 offset-md-2" style="@(ViewBag.Tipo == "warning" ? "  " : "display:none;" ) ">
        <img src="~/img/alert.png" class="img-fluid rounded mx-auto d-block" alt="..." style="width:50%; ">
    </div>

</div>
<div class="row">
    <div class="col col-md-8 offset-md-2" style="@(ViewBag.Tipo == "danger" || ViewBag.Tipo == "info" || ViewBag.Tipo == "warning"  ? " display:none; " : "" ) ">
        <img src="~/img/analisis.png" class="img-fluid rounded mx-auto d-block" alt="..." style="width:50%; ">
    </div>

</div>
<div class="row">
    <div class="col col-md-8 offset-md-2" style="@(ViewBag.Tipo == "danger" ? " " : "display:none; " ) ">
        <img src="~/img/mutante.png" class="img-fluid rounded mx-auto d-block" alt="..." style="width:50%; ">
    </div>

</div>
<div class="row" style="@((@ViewBag.Tipo == null ?? false) == false ? " " : " display:none;" )">
    <div class="col col-md-8 offset-md-2">
        <div class="alert @((@ViewBag.Tipo == null ?? false) != false ? "alert-" + @ViewBag.Tipo : "" ) fade @((@ViewBag.Tipo == null ?? false) ? " hide" : " show" ) " role="alert">
            <p class="text-center">Resultado del laboratorio MELI</p>
            <ul class="list-group">


                @foreach (string message in @ViewBag.Message ?? new String[] { "" })
                {
                    <li class="list-group-item list-group-item-@ViewBag.Tipo">
                        @message
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<form class="row g-3" asp-action="Create" method="post" style="@((@ViewBag.Tipo == null ?? false) != false ? " " : " display:none;" )">
    <div class="col-md-8 offset-md-2">
        <div class="row">

            <div class="col-12">
                <label for="inputAdn" class="form-label">Nuevo Test</label>


                <input type="text" class="form-control" id="inputAdn" name="inputAdn" placeholder="Ingrese el ADN" required>
                <p><small>Formato requerido: {"ATGCGA","CAGTGC","TTATGT","AGAAGG","CCCCTA","TCACTG"}</small></p>
            </div>
        </div>
        <div class="row" style="padding-top:10px;">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Analizar</button>
            </div>
        </div>
    </div>
</form>


